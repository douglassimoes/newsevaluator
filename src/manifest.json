{
    "manifest_version": 2,
   
    "name": "News Evaluator",
    "version": "0.1.0",
    "description": "This tool will evaluates news websites and points you to the news that most fits your language learning goal.",
    
    "permissions": [
      "tabs",
      "storage",
      "unlimitedStorage"
  ],
    "background": {
      "page": "html/background.html"
  },
   
    "content_scripts": [{
      "css": ["css/styles.css"],
      "js": ["js/rtl_fr.js"],
      "matches": ["https://5minutes.rtl.lu/*"]
    },{ "css": ["css/styles.css"],
    "js": ["js/le_monde.js"],
    "matches": ["https://www.lemonde.fr/*"]
  }],
  "browser_action":{
    "default_icon" : "images/extension_icon.png",
    "default_popup": "html/popup.html"
  }
   
  }